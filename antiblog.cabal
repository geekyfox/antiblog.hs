    ,filepath >=1.4.0.0 && <1.5
    ,ini >= 0.3.4 && < 0.4
    ,postgresql-simple >=0.5 && <0.6
    ,random >= 1.1 && <1.2
    ,resource-pool >=0.2.3.2 && <0.3
    ,split >=0.2.2 && <0.3        
    ,text >=1.2.0.4 && <1.3
    ,time >=1.4  && <1.7
    ,unordered-containers >= 0.2.7.0 && < 0.3
    

executable antisync
    main-is: Antisync/Main.hs
