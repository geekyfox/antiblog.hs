category:            Web
build-type:          Simple
cabal-version:       >=1.8

executable antiblog
  main-is:             Antiblog/Main.hs
  hs-source-dirs:      src
  ghc-options:         -O2 -Wall -fno-warn-unused-do-bind -fno-warn-orphans
                       -fno-warn-name-shadowing
                       -fno-warn-missing-signatures

  if impl(ghc < 7.6)
    build-depends:
        -- wai-extra 3.0.15 doesn't build on GHC 7.4
        wai-extra < 3.0.15
        ,warp < 3.1.0

  build-depends:
    base >=4.5 && <5.0
    ,skulk >= 0.1 && < 0.2
    ,containers >=0.4.2 && <0.6
                      ,aeson             ==0.11.0.0
                      ,blaze-html        >=0.8.0.2    && <0.9
                      ,bytestring        >=0.10.6.0   && <0.11
                      ,http-types        >=0.8.6      && <0.9
                      ,network-uri       >=2.6.0.0    && <2.7
                      ,postgresql-simple >=0.5
                      ,random
                      ,resource-pool     >=0.2.3.2    && <0.3
                      ,rss               >=3000.2.0.4 && <3000.3
                      ,scotty            ==0.11.0
                      ,text              >=1.2.0.4    && <1.3
                      ,transformers
                      ,directory         >=1.2.2.1  && <1.3
                      ,filepath          >=1.4.0.0  && <1.5
                      ,split             >=0.2.2    && <0.3
                      ,time              >=1.4  && <1.6


